<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rlyUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgListUser"
            android:layout_width="@dimen/img_list_size"
            android:layout_height="@dimen/img_list_size"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_person_black"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/userNick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre usuario"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="@dimen/pading_small"
            android:layout_toStartOf="@+id/follow"
            android:layout_toEndOf="@id/imgListUser"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_margin="@dimen/pading_small"
            android:layout_toEndOf="@id/imgListUser"
            android:layout_below="@id/userNick"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/surnames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/name"
            android:layout_toEndOf="@+id/name"
            android:hint="Apellidos"
            android:layout_toStartOf="@+id/follow"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pading_small"
            android:text="Seguir"
            android:layout_alignParentEnd="true"
            android:theme="@style/buttons"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>